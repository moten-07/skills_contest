<?xml version="1.0" encoding="utf-8"?>
<!--  可滚动布局  -->
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".framents.HomeFragment">

        <!-- 搜索框 -->

        <LinearLayout
            android:id="@+id/search_bar"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shap1"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@mipmap/icon_action" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:ems="10"
                android:gravity="center"
                android:hint="@string/seach_hint"
                android:inputType="text" />
        </LinearLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@null"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/search_bar"
            android:layout_marginTop="10dp">
            <!--  轮播图  -->
            <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"/>
            <!--  图片标记  -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent">
                <View
                    android:id="@+id/news_poin1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_margin="20dp"
                    android:background="@drawable/bg_point1" />

                <View
                    android:id="@+id/news_poin2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_margin="20dp"
                    android:background="@drawable/bg_point2" />

                <View
                    android:id="@+id/news_poin3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_margin="20dp"
                    android:background="@drawable/bg_point2" />
            </LinearLayout>
            <ImageButton
                android:id="@+id/btn_lastnew"
                android:layout_width="30dp"
                android:layout_height="70dp"
                android:src="@drawable/btn_left"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <ImageButton
                android:id="@+id/btn_nextnew"
                android:layout_width="30dp"
                android:layout_height="70dp"
                android:src="@drawable/btn_right"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <!--  应用列表  -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout2">
            <!--  第一行  -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageButton
                        android:id="@+id/btn_1_1"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/shap2"/>
                    <TextView
                        android:id="@+id/text_1_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="应用服务1"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageButton
                        android:id="@+id/btn_1_2"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/shap2"/>
                    <TextView
                        android:id="@+id/text_1_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="应用服务2"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageButton
                        android:id="@+id/btn_1_3"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/shap2"/>
                    <TextView
                        android:id="@+id/text_1_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="应用服务3"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageButton
                        android:id="@+id/btn_1_4"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/shap2"/>
                    <TextView
                        android:id="@+id/text_1_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="应用服务4"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageButton
                        android:id="@+id/btn_1_5"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/shap2"/>
                    <TextView
                        android:id="@+id/text_1_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="应用服务5"
                        />
                </LinearLayout>
            </LinearLayout>
            <!--  第二行  -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageButton
                        android:id="@+id/btn_2_1"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/shap2"/>
                    <TextView
                        android:id="@+id/text_2_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="应用服务6"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageButton
                        android:id="@+id/btn_2_2"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/shap2"/>
                    <TextView
                        android:id="@+id/text_3_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="应用服务7"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageButton
                        android:id="@+id/btn_2_3"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/shap2"/>
                    <TextView
                        android:id="@+id/text_2_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="应用服务8"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageButton
                        android:id="@+id/btn_2_4"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/shap2"/>
                    <TextView
                        android:id="@+id/text_2_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="应用服务9"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageButton
                        android:id="@+id/btn_2_5"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/shap2"/>
                    <TextView
                        android:id="@+id/text_2_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="更多服务"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <!--  新闻列表  -->

        <ListView
            android:id="@+id/news_list"
            android:layout_width="match_parent"
            android:layout_height="390dp"
            app:layout_constraintTop_toBottomOf="@id/layout2"
            android:layout_marginTop="220dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>