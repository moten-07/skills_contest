<?xml version="1.0" encoding="utf-8"?>
<!--应用服务卡片-->
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:layout_margin="10dp"
    android:elevation="20dp"
    app:cardCornerRadius="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#707070">

        <ImageView
            android:id="@+id/lappicon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/subway"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/lapptitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地铁"
            android:layout_marginTop="5dp"
            android:textSize="10dp"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/lappicon"
            app:layout_constraintLeft_toLeftOf="@id/lappicon"
            app:layout_constraintRight_toRightOf="@id/lappicon"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>