<?xml version="1.0" encoding="utf-8"?>
<!--单条的布局-->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!--新闻图片-->
    <ImageView
        android:id="@+id/news_icon"
        android:layout_width="100dp"
        android:layout_height="61.8dp"
        android:layout_margin="20dp"
        android:src="@mipmap/newa"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <!--新闻标题-->
    <TextView
        android:id="@+id/news_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="title"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/news_icon"/>

    <!--新闻摘要，太长要删的-->
    <TextView
        android:id="@+id/news_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="this is news ……"
        android:layout_marginTop="5dp"
        android:ems="12"
        app:layout_constraintTop_toBottomOf="@id/news_title"
        app:layout_constraintLeft_toLeftOf="@id/news_title"/>

    <!--观看人数-->
    <View
        android:id="@+id/news_icon_eye"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/ic_baseline_remove_red_eye_24"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/news_icon"
        app:layout_constraintLeft_toLeftOf="@id/news_icon"/>
    <TextView
        android:id="@+id/news_views_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ViewLumber"
        app:layout_constraintTop_toTopOf="@id/news_icon_eye"
        app:layout_constraintLeft_toRightOf="@id/news_icon_eye"/>

    <!--点赞人数-->
    <View
        android:id="@+id/news_icon_favorite"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/ic_baseline_favorite_border_24"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toTopOf="@id/news_views_number"
        app:layout_constraintLeft_toRightOf="@id/news_views_number"/>
    <TextView
        android:id="@+id/news_like_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="likeNumber"
        app:layout_constraintTop_toTopOf="@id/news_icon_favorite"
        app:layout_constraintLeft_toRightOf="@id/news_icon_favorite"/>
    <!--发布日期-->
    <TextView
        android:id="@+id/news_date"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="date"
        android:layout_marginRight="16dp"
        app:layout_constraintTop_toTopOf="@id/news_like_number"
        app:layout_constraintRight_toRightOf="parent"/>
    <!--这是一条分割线-->
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@drawable/shap3"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/news_icon_eye"/>
</androidx.constraintlayout.widget.ConstraintLayout>