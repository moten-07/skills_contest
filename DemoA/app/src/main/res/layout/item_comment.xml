<?xml version="1.0" encoding="utf-8"?>
<!--评论区-->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!--头像-->
    <ImageView
        android:id="@+id/user_icon_c"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@mipmap/city"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/user_name_c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户名"
        android:layout_marginLeft="15dp"
        android:textSize="15dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/user_icon_c"
        app:layout_constraintLeft_toRightOf="@id/user_icon_c"/>
    <TextView
        android:id="@+id/user_comment_c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="评论内容"
        android:ems="14"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/user_name_c"
        app:layout_constraintLeft_toLeftOf="@id/user_name_c"/>
    <TextView
        android:id="@+id/comment_date_c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="评论时间"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/user_comment_c"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/user_comment_c"
       />
    <!--转评赞功能暂不设计-->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/shap3"
        app:layout_constraintTop_toBottomOf="@id/comment_date_c" />
</androidx.constraintlayout.widget.ConstraintLayout>