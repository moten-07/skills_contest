<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_uppass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppDemoA.Home"
        android:background="?attr/colorPrimary"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/up_pass_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/userInfoHint1"
        app:layout_constraintTop_toBottomOf="@id/toolbar_uppass"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.125"
        app:layout_constraintHorizontal_bias="0.2"/>

    <TextView
        android:id="@+id/up_pass_ordpwd_t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/user_up_pass_ordpass"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/up_pass_id"
        app:layout_constraintLeft_toLeftOf="@id/up_pass_id"/>
    <EditText
        android:id="@+id/up_pass_ordpwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="8"
        android:gravity="center"
        android:inputType="textPassword"
        android:background="@drawable/shap2"
        app:layout_constraintTop_toTopOf="@id/up_pass_ordpwd_t"
        app:layout_constraintBottom_toBottomOf="@id/up_pass_ordpwd_t"
        app:layout_constraintLeft_toRightOf="@id/up_pass_ordpwd_t"/>
    <TextView
        android:id="@+id/up_pass_newpwd_t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/user_up_pass_newpass"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/up_pass_ordpwd_t"
        app:layout_constraintLeft_toLeftOf="@id/up_pass_ordpwd_t"/>
    <EditText
        android:id="@+id/up_pass_newpwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="8"
        android:background="@drawable/shap2"
        android:gravity="center"
        android:inputType="textPassword"
        app:layout_constraintTop_toTopOf="@id/up_pass_newpwd_t"
        app:layout_constraintBottom_toBottomOf="@id/up_pass_newpwd_t"
        app:layout_constraintLeft_toRightOf="@id/up_pass_newpwd_t"/>
    <TextView
        android:id="@+id/up_pass_newpwd_t2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/user_up_pass_newpass2"
        android:layout_marginTop="40dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/up_pass_newpwd_t"
        app:layout_constraintRight_toRightOf="@id/up_pass_newpwd_t"/>
    <LinearLayout
        android:id="@+id/error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/up_pass_newpwd2"
        app:layout_constraintLeft_toLeftOf="@id/up_pass_newpwd2"
        app:layout_constraintRight_toRightOf="@id/up_pass_newpwd2"
        app:layout_constraintHorizontal_bias="0">
        <View
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/ic_baseline_error_outline_24"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_up_pass_error"
            android:textColor="@color/red"/>
    </LinearLayout>
    <EditText
        android:id="@+id/up_pass_newpwd2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="8"
        android:background="@drawable/shap2"
        android:inputType="textPassword"
        app:layout_constraintTop_toTopOf="@id/up_pass_newpwd_t2"
        app:layout_constraintBottom_toBottomOf="@id/up_pass_newpwd_t2"
        app:layout_constraintLeft_toRightOf="@id/up_pass_newpwd_t2"/>
    <Button
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/user_up_pass_bottom"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/up_pass_newpwd2"
        app:layout_constraintLeft_toLeftOf="@id/up_pass_newpwd_t2"
        app:layout_constraintRight_toRightOf="@id/up_pass_newpwd2"/>
</androidx.constraintlayout.widget.ConstraintLayout>