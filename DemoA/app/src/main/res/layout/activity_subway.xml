<?xml version="1.0" encoding="utf-8"?>
<!--地铁主页面-->
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/subway_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppDemoA.Home"
        android:background="?attr/colorPrimary"
        app:layout_constraintTop_toTopOf="parent"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".func.SubwayActivity">
            <ImageView
                android:id="@+id/location"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/location"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="0.1"/>
            <TextView
                android:id="@+id/subway_where"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/subway_hint"
                android:layout_marginLeft="40dp"
                app:layout_constraintTop_toTopOf="@id/location"
                app:layout_constraintLeft_toRightOf="@id/location"
                app:layout_constraintBottom_toBottomOf="@id/location"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/subway_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                app:layout_constraintTop_toBottomOf="@id/location"/>

            <TextView
                android:id="@+id/low"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/subway_list"
                android:text="@string/endstr"
                android:gravity="center"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</LinearLayout>
