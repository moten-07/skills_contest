<?xml version="1.0" encoding="utf-8"?>
<!--地铁主页面-->
<ScrollView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".func.SubwayActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/subway_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:theme="@style/AppDemoA.Home"
        android:background="?attr/colorPrimary"/>
        <ImageView
            android:id="@+id/location"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toBottomOf="@id/subway_bar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.1"
            android:src="@mipmap/location"/>
        <TextView
            android:id="@+id/subway_where"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/subway_hint"
            android:layout_marginLeft="40dp"
            app:layout_constraintTop_toTopOf="@id/location"
            app:layout_constraintLeft_toRightOf="@id/location"
            app:layout_constraintBottom_toBottomOf="@id/location"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/subway_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@id/location"/>

    <TextView
        android:id="@+id/low"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/subway_list"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/endstr"
        android:gravity="center"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>