<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".func.userInfoActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/this_subway_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:theme="@style/AppDemoA.Home"
            android:background="?attr/colorPrimary"/>

        <ImageView
            android:id="@+id/user_info_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="20dp"
            android:src="@drawable/ic_baseline_account_box_24"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/this_subway_bar" />

        <Button
            android:id="@+id/user_info_newicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/userInfoBotton2"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/user_info_icon"
            app:layout_constraintLeft_toLeftOf="@id/user_info_icon"
            app:layout_constraintRight_toRightOf="@id/user_info_icon"/>
        <TextView
            android:id="@+id/user_icon_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/userInfoHint1"
            android:layout_marginRight="20dp"
            app:layout_constraintTop_toTopOf="@id/user_info_icon"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/info_textview1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/userInfoTitile1"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/user_info_newicon"
            app:layout_constraintRight_toRightOf="@id/user_info_newicon"/>
        <EditText
            android:id="@+id/user_info_newname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/userInfoTitile1"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="@+id/info_textview1"
            app:layout_constraintLeft_toRightOf="@id/info_textview1"/>

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="@+id/info_textview2"
            app:layout_constraintLeft_toRightOf="@id/info_textview2"
            app:layout_constraintRight_toRightOf="@id/user_info_newname">
            <RadioButton
                android:id="@+id/user_info_newsex_n"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/useInfoSex1"/>
            <RadioButton
                android:id="@+id/user_info_newsex_w"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/useInfoSex0"/>
        </RadioGroup>

        <TextView
            android:id="@+id/info_textview2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/userInfoTitile2"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/info_textview1"
            app:layout_constraintRight_toRightOf="@id/info_textview1"/>

        <TextView
            android:id="@+id/info_textview3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/userInfoTitile3"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/info_textview2"
            app:layout_constraintRight_toRightOf="@id/info_textview2"/>
        <EditText
            android:id="@+id/user_info_newphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/userInfoTitile3"
            android:gravity="center"
            android:maxLength="11"
            android:inputType="number"
            app:layout_constraintTop_toTopOf="@+id/info_textview3"
            app:layout_constraintLeft_toRightOf="@id/info_textview3"/>

        <TextView
            android:id="@+id/user_info_paper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/info_textview3"
            app:layout_constraintLeft_toLeftOf="@id/info_textview3"
            android:text="@string/userInfoTitile4"
            android:layout_marginTop="20dp"
            android:textSize="18dp"/>
        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/userInfoTitile5"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/user_info_paper"
            app:layout_constraintLeft_toLeftOf="@id/user_info_paper"/>
        <EditText
            android:id="@+id/remark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="13"
            app:layout_constraintTop_toTopOf="@id/textView4"
            app:layout_constraintLeft_toRightOf="@id/textView4"
            app:layout_constraintRight_toRightOf="parent"/>
        <Button
            android:id="@+id/user_info_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/remark"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="@string/userInfoBotton1"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>