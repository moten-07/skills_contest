<?xml version="1.0" encoding="utf-8"?>
<!--新闻列表的布局-->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/news_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:src="@mipmap/newa"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/news_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="title"
        android:textColor="@color/black"
        android:textSize="50dp"
        android:layout_marginLeft="50dp"
        app:layout_constraintTop_toTopOf="@id/news_icon"
        app:layout_constraintLeft_toRightOf="@id/news_icon"/>

    <TextView
        android:id="@+id/news_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="this is news ……"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/news_title"
        app:layout_constraintLeft_toLeftOf="@id/news_title"/>

    <TextView
        android:id="@+id/news_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="number"
        app:layout_constraintTop_toTopOf="@id/news_icon"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"/>

    <TextView
        android:id="@+id/news_date"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="bottom|right"
        android:text="date"
        android:layout_marginTop="45dp"
        app:layout_constraintTop_toBottomOf="@id/news_number"
        app:layout_constraintRight_toRightOf="@id/news_number"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@drawable/shap3"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/news_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>